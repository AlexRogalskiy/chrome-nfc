{
  "name": "NFC Sample",
  "version": "0.1",
  "description": "chrome.nfc API sample",
  "manifest_version": 2,

  "permissions": [
    "usb",
    {
      "usbDevices": [ 
        { "vendorId": 1254, "productId": 21905 }, // ACR122U
        { "vendorId": 1839, "productId": 8704 }   // SCL3711
      ] 
    }
  ],

  "app": {
    "background": {
      "scripts": [ "background.js" ]
    }
  }
}
