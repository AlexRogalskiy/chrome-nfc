{
  "name": "nfcjs",
  "version": "0.0.1",

  "description": "NFC Javascript library",
  "manifest_version" : 2,
  "minimum_chrome_version" : "26.0.1410.28",

  "permissions": [
    "usb",
    "notifications",
    { "usbDevices": [ {"vendorId":1254, "productId":21905},
                      {"vendorId":1839, "productId":8704} ] }
  ],

  "app": {
    "background": {
      "persistent": true,
      "scripts":
        [
         "b64.js",
         "background.js",
         "mifare-classic.js",
         "ndef.js",
         "nfc.js",
         "devmanager.js",
         "scl3711.js",
         "sha256.js",
         "tt2.js",
         "usb.js",
         "util.js"
         ]
    }
  },

  "icons": {
    "128": "nfcjs.ico"
  }
}
